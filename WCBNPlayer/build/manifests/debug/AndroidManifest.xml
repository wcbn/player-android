<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="org.wcbn.android">

    <uses-sdk android:minSdkVersion="11" android:targetSdkVersion="18"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:label="@string/app_name" android:name="org.wcbn.android.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name="org.wcbn.android.SettingsActivity"/>
        <service android:label="@string/app_name" android:name="org.wcbn.android.StreamService">
        </service>
    </application>

</manifest>
